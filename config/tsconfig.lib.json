{
  "extends": ["./tsconfig.browser.json"],
  "compilerOptions": {
    "outDir": "../.dev",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "noEmit": false
  },
  "include": ["../src/**/*.ts", "../src/**/*.tsx", "../src/**/*.css"],
  "exclude": [
    "../**/*.stories.ts",
    "../**/*.stories.tsx",
    "../src/**/*.test.ts",
    "../src/**/*.test.tsx",
    "../src/**/*.test-d.ts",
    "../src/test.setup.ts",
    "../src/test.ts",
    "../src/test/**/*.ts",
    "../src/test/**/*.tsx",
    "../src/storybook/**/*.ts",
    "../src/storybook/**/*.tsx"
  ]
}
