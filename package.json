{
  "name": "react-compinators",
  "description": "React component combinators",
  "version": "1.0.0",
  "type": "module",
  "author": "Ran Eilam <ran@haag59.com> (https://middle-ages.github.io/)",
  "homepage": "https://github.com/middle-ages/react-component-combinators",
  "bugs": "https://github.com/middle-ages/react-component-combinators/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/middle-ages/react-component-combinators"
  },
  "license": "ISC",
  "keywords": [
    "react",
    "effect",
    "combinators",
    "HOC",
    "higher-order-component"
  ],
  "scripts": {
    "dev": "vite -c config/vite.config.ts",
    "build": "vite build -c config/vite.config.ts",
    "build:docs": "typedoc --options config/typedoc-json",
    "preview": "vite -c config/vite.config.ts preview",
    "clean": "dev/clean",
    "lint": "eslint --config config/eslint.config.js src",
    "lint:fix": "eslint --config config/eslint.config.js --fix src",
    "typecheck": "tsc -b",
    "test": "vitest -c config/vitest.config.ts --reporter=verbose",
    "test:run": "vitest -c config/vitest.config.ts run",
    "coverage": "vitest -c config/vitest.config.ts run --reporter=verbose --coverage",
    "circular": "depcruise src -c config/dependency-cruiser.cjs",
    "graph:dependencies": "dev/graph-dependencies",
    "ls:deps": "pnpm ls --prod",
    "ls:deps:dev": "pnpm ls --dev",
    "storybook": "storybook dev -c .storybook-webpack -p 6006",
    "build:storybook": "storybook build -c .storybook-webpack",
    "storybook:vite": "storybook dev -c .storybook-vite -p 6006",
    "build:storybook:vite": "storybook build -c .storybook-vite"
  },
  "dependencies": {
    "@effect/typeclass": "^0.31.11",
    "effect": "^3.12.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@fast-check/vitest": "^0.1.5",
    "@storybook/addon-actions": "^8.5.4",
    "@storybook/addon-essentials": "^8.5.4",
    "@storybook/addon-interactions": "^8.5.4",
    "@storybook/addon-storysource": "^8.5.4",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/addon-webpack5-compiler-swc": "^2.0.0",
    "@storybook/blocks": "^8.5.4",
    "@storybook/react": "^8.5.4",
    "@storybook/react-vite": "^8.5.4",
    "@storybook/react-webpack5": "^8.5.4",
    "@storybook/test": "^8.5.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^3.0.5",
    "css-loader": "^7.1.2",
    "dependency-cruiser": "^16.9.0",
    "effect-ts-laws": "^1.2.4",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-unicorn": "^56.0.1",
    "fast-check": "^3.23.2",
    "globals": "^15.14.0",
    "happy-dom": "^17.1.0",
    "prettier": "^3.5.0",
    "storybook": "^8.5.4",
    "style-loader": "^4.0.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typedoc": "^0.27.7",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "bracketSameLine": true,
    "endOfLine": "lf"
  },
  "packageManager": "pnpm@9.2.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./src/index.d.ts",
        "import": "./src/index.js"
      }
    },
    "./test": {
      "import": {
        "types": "./src/test.d.ts",
        "import": "./src/test.js"
      }
    },
    "./storybook": {
      "import": {
        "types": "./src/storybook.d.ts",
        "import": "./src/storybook.js"
      }
    },
    "./test/*": {
      "import": {
        "types": "./src/test/*.d.ts",
        "import": "./src/test/*.js"
      }
    }
  },
  "imports": {
    "#test": {
      "types": "./src/test.d.ts",
      "import": "./src/test.js"
    },
    "#storybook": {
      "types": "./src/storybook.d.ts",
      "import": "./src/storybook.js"
    }
  }
}
